@page
@model BookListRazor.CreateModel
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>   
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="books.Name"></label>

            </div>
            <div class="col-6">
                <input asp-for="books.Name" class="form-control" />

            </div>
            <span asp-validation-for="books.Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="books.Author"></label>

            </div>
            <div class="col-6">
                <input asp-for="books.Author" class="form-control" />

            </div>
            <span asp-validation-for="books.Author" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <div class="col-3">
                <label asp-for="books.ISBN"></label>

            </div>
            <div class="col-6">
                <input asp-for="books.ISBN" class="form-control" />

            </div>
            <span asp-validation-for="books.ISBN" class="text-danger"></span>
        </div>
        <div class="form-gorup row">
            <div class="col-3 offset-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a  asp-page="Index" class="btn btn-success form-control">Back to Index</a>
            </div>
        </div>


    </form>
</div>

@section Scripts
{
<partial name="_ValidationScriptsPartial" />
}
